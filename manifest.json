{
  "manifest_version": 2,
  "name": "ChatWork Stamp",
  "version": "0.5",
  "description": "ChatWorkにスタンプを追加するよ",
  "icons": {
    "128": "stamp-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://kcw.kddi.ne.jp/*", "https://www.chatwork.com/*"],
      "js": ["extension.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["script.js", "style.css"]
}
